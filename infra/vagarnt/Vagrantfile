VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|
  # VM 이름 정의
  config.vm.define "devhub" do |devhub|
    # 기본 VM 설정
    devhub.vm.box = "ubuntu/jammy64"
    devhub.vm.hostname = "devhub"

    # 네트워크 설정
    devhub.vm.network "private_network", ip: "192.168.56.10"

    # VirtualBox 리소스 설정
    devhub.vm.provider "virtualbox" do |vb|
      vb.name = "devhub-vm"
      vb.cpus = 2
      vb.memory = 4096
      vb.gui = false
    end

    # VM 초기화 스크립트 (init.sh)
    devhub.vm.provision "shell", path: "scripts/init.sh"

    # Ansible Local 프로비저닝
    devhub.vm.provision "ansible_local" do |ansible|
      ansible.playbook = "/vagrant/ansible/playbook.yml"
      ansible.compatibility_mode = "2.0"
      ansible.verbose = "v"
    end

    # Ansible 폴더 동기화
    devhub.vm.synced_folder "../ansible", "/vagrant/ansible"
  end
end
