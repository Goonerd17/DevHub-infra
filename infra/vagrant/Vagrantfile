Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/jammy64"

  # 공통 설정
  config.vm.provider "virtualbox" do |vb|
    vb.cpus = 2
    vb.memory = 4096
    vb.gui = false
  end

  # ───────────────────────
  # Master 노드
  # ───────────────────────
  config.vm.define "k8s-master" do |master|
    master.vm.hostname = "k8s-master"
    master.vm.network "private_network", ip: "192.168.56.10"

    master.vm.provision "shell", path: "scripts/init.sh"

    master.vm.synced_folder "./ansible", "/vagrant/ansible"

    master.vm.provision "ansible_local" do |ansible|
      ansible.playbook = "/vagrant/ansible/playbook-master.yml"
      ansible.inventory_path = "/vagrant/ansible/inventory/hosts.ini"
      ansible.compatibility_mode = "2.0"
      ansible.verbose = "v"
    end
  end

  # ───────────────────────
  # Worker 노드
  # ───────────────────────
  config.vm.define "k8s-worker" do |worker|
    worker.vm.hostname = "k8s-worker"
    worker.vm.network "private_network", ip: "192.168.56.11"

    worker.vm.provision "shell", path: "scripts/init.sh"

    worker.vm.synced_folder "./ansible", "/vagrant/ansible"

    worker.vm.provision "ansible_local" do |ansible|
      ansible.playbook = "/vagrant/ansible/playbook-worker.yml"
      ansible.inventory_path = "/vagrant/ansible/inventory/hosts.ini"
      ansible.compatibility_mode = "2.0"
      ansible.verbose = "v"
    end
  end
end
